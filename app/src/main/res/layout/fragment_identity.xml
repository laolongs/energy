<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/bg_identity"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/identity_image"
                android:gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_me" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/identity_username"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="张辛福"/>
        </LinearLayout>


        <TextView
            android:id="@+id/identity_company"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="绍兴市科普织造有限公司"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_tablenumber"
        style="@style/identity_layout">

        <ImageView
            style="@style/identity_imageview"
            android:src="@mipmap/ic_lock" />

        <TextView
            style="@style/identity_textview"
            android:text="切换表号" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            style="@style/data_textview"
            android:text=">"
            />
    </LinearLayout>


    <ImageView
        style="@style/cut_off_line_1dp"/>
    <LinearLayout
        android:id="@+id/layout_password"
        style="@style/identity_layout">

        <ImageView
            style="@style/identity_imageview"
            android:src="@mipmap/ic_telephone" />

        <TextView
            style="@style/identity_textview"
            android:text="修改密码" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            style="@style/data_textview"
            android:text=">"
            />
    </LinearLayout>

    <ImageView
        style="@style/cut_off_line_1dp"/>

    <LinearLayout
        android:id="@+id/layout_version"
        style="@style/identity_layout">

        <ImageView
            style="@style/identity_imageview"
            android:src="@mipmap/ic_message" />

        <TextView
            style="@style/identity_textview"
            android:text="版本更新" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            style="@style/data_textview"
            android:text=">"
            />
    </LinearLayout>

    <ImageView
        style="@style/cut_off_line_1dp"/>

    <LinearLayout
        android:id="@+id/layout_about"
        style="@style/identity_layout">

        <ImageView
            style="@style/identity_imageview"
            android:src="@mipmap/ic_about" />

        <TextView
            style="@style/identity_textview"
            android:text="关于我们" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            style="@style/data_textview"
            android:text=">"
            />
    </LinearLayout>

    <ImageView
        style="@style/cut_off_line_1dp"/>

    <LinearLayout
        android:id="@+id/layout_logout"
        style="@style/identity_layout">

        <ImageView
            style="@style/identity_imageview"
            android:src="@mipmap/ic_logout" />

        <TextView
            style="@style/identity_textview"
            android:text="设置" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            style="@style/data_textview"
            android:text=">"
            />
    </LinearLayout>
    <ImageView
        style="@style/cut_off_line_1dp"/>
</LinearLayout>